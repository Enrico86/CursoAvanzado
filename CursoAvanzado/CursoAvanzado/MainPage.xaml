<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoAvanzado.MainPage">

    <StackLayout>
        <Button x:Name="btnTask"
                Text="Ejecutar Display Alert"></Button>
        <Button x:Name="btnTask2"
                Text="Ejecutar cambio en el primer label"></Button>
        <Button x:Name="btnTask3"
                Text="Open URI"></Button>
        <Button x:Name="btnTask4"
                Text="FontSize según dispositivo"></Button>
        <Button x:Name="btnTask5" 
                Text="Start Timer"></Button>
        <Button x:Name="btnTask6" 
                Text="Styles en el segundo label"></Button>
        <Label Text="Probando la clase Device"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand"
               x:Name="statusLabel"></Label>
        <Label Text="Probando la clase Styles"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand"
               x:Name="stylesLabel"></Label>
    </StackLayout>

</ContentPage>
